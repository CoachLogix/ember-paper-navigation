{{!-- The following component displays Ember's default welcome message. --}}
{{!-- Feel free to remove this! --}}

{{#paper-button raised=true primary=true onClick=(action (mut showSessionAutoMessage) true)}}Show Session Auto Message{{/paper-button}}
{{#paper-button raised=true primary=true onClick=(action (mut showFileAutoMessage) true)}}Show File Auto Message{{/paper-button}}
{{#paper-button raised=true primary=true onClick=(action (mut showFormAutoMessage) true)}}Show Form Auto Message{{/paper-button}}
{{#paper-button raised=true primary=true onClick=(action (mut showMilestoneAutoMessage) true)}}Show Milestone Auto Message{{/paper-button}}

{{#if showSessionAutoMessage}}
  {{#paper-dialog fullscreen=true clickOutsideToClose=true onClose=(action (mut showSessionAutoMessage) false)}}
    {{session/auto-message onClose=(action (mut showSessionAutoMessage) false)}}
  {{/paper-dialog}}
{{/if}}

{{#if showFileAutoMessage}}

  {{#paper-dialog fullscreen=true clickOutsideToClose=true onClose=(action (mut showFileAutoMessage) false)}}
    {{file/auto-message onClose=(action (mut showFileAutoMessage) false)}}
  {{/paper-dialog}}
{{/if}}
{{#if showFormAutoMessage}}

  {{#paper-dialog fullscreen=true clickOutsideToClose=true onClose=(action (mut showFormAutoMessage) false)}}
    {{form/auto-message onClose=(action (mut showFormAutoMessage) false)}}
  {{/paper-dialog}}
{{/if}}

{{#if showMilestoneAutoMessage clickOutsideToClose=true onClose=(action (mut showMilestoneAutoMessage) false)}}
  {{#paper-dialog fullscreen=true}}
    {{milestone/auto-message onClose=(action (mut showMilestoneAutoMessage) false)}}
  {{/paper-dialog}}
{{/if}}
